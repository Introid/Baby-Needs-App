<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/layout_id"

    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1EBEB"
            android:padding="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Item"
                android:id="@+id/title"

                android:layout_centerHorizontal="true"
                android:textStyle="italic"
                android:textSize="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/babyItem"
                android:hint="Enter Item"
                android:layout_below="@+id/title"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemQuantity"
                android:hint="Enter Quantity"
                android:inputType="number"
                android:layout_below="@+id/babyItem"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemColor"
                android:hint="Enter Color"
                android:layout_below="@+id/itemQuantity"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemSize"
                android:inputType="number"
                android:hint="Enter Size"

                android:layout_below="@+id/itemColor"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/saveButton"
                android:layout_centerHorizontal="true"
                android:text="Save"
                android:textColor="#E9DCDC"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:background="#0A0D0F"
                android:layout_below="@+id/itemSize"

                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>